{% extends "layouts/base.njk" %}
{% set currentPage = "job-roles" %}
{% block title %}
  Edit Job Role - {{ translateJobTitle(job.name, t) }}
{% endblock %}
{% block styles %}
  <link rel="stylesheet" href="/css/job-roles.css">
  {% endblock %}
  {% block body_attributes %}
    class="job-roles-page"{% endblock %}
  {% block main_attributes %}
    class="container mx-auto px-4 py-8"{% endblock %}
  {% block content %}
    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4 mb-4">
        <a href="/job-roles" class="btn btn-ghost btn-sm gap-2">
          <i data-lucide="chevron-left" class="w-4 h-4"></i>
          Back to Job Roles
        </a>
      </div>
      <h1 class="text-4xl font-bold text-base-content mb-2">{{ t('jobRoles.editJobRoleForm.title') }}</h1>
      <p class="text-base-content/70">{{ t('jobRoles.editJobRoleForm.subtitle') }}</p>
    </div>
    <!-- Edit Form -->
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body">
        <form id="editJobForm" method="POST" action="/job-roles/{{ job.id }}/edit">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Job Name -->
            <div class="form-control w-full col-span-2">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.jobRoleNameRequired') }}</span>
              </label>
              <input type="text" name="jobRoleName" id="jobRoleName" class="input input-bordered w-full" value="{{ job.name }}" required/>
            </div>
            <!-- Location -->
            <div class="form-control w-full">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.locationRequired') }}</span>
              </label>
              <input type="text" name="location" id="location" class="input input-bordered w-full" value="{{ job.location }}" required/>
            </div>
            <!-- Capability -->
            <div class="form-control w-full">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.capabilityRequired') }}</span>
              </label>
              <select name="capability" id="capability" class="select select-bordered w-full" required>
                <option value="">{{ t('jobRoles.editJobRoleForm.selectCapability') }}</option>
                {% for capability in capabilities %}
                  <option value="{{ capability.value }}" {% if job.capability == capability.value %} selected {% endif %}>{{ capability.label }}</option>
                {% endfor %}
              </select>
            </div>
            <!-- Band -->
            <div class="form-control w-full">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.bandRequired') }}</span>
              </label>
              <select name="band" id="band" class="select select-bordered w-full" required>
                <option value="">{{ t('jobRoles.editJobRoleForm.selectBand') }}</option>
                <option value="Junior" {% if job.band == "Junior" %} selected {% endif %}>{{ t('jobRoles.editJobRoleForm.bandJunior') }}</option>
                <option value="Mid" {% if job.band == "Mid" %} selected {% endif %}>{{ t('jobRoles.editJobRoleForm.bandMid') }}</option>
                <option value="Senior" {% if job.band == "Senior" %} selected {% endif %}>{{ t('jobRoles.editJobRoleForm.bandSenior') }}</option>
                <option value="Principal" {% if job.band == "Principal" %} selected {% endif %}>{{ t('jobRoles.editJobRoleForm.bandPrincipal') }}</option>
              </select>
            </div>
            <!-- Status -->
            <div class="form-control w-full">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.statusRequired') }}</span>
              </label>
              <select name="status" id="status" class="select select-bordered w-full" required>
                <option value="">{{ t('jobRoles.editJobRoleForm.selectStatus') }}</option>
                <option value="open" {% if job.status == "Open" %} selected {% endif %}>{{ t('jobRoles.editJobRoleForm.statusOpen') }}</option>
                <option value="closed" {% if job.status == "Closed" %} selected {% endif %}>{{ t('jobRoles.editJobRoleForm.statusClosed') }}</option>
              </select>
            </div>
            <!-- Number of Positions -->
            <div class="form-control w-full">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.numberOfPositionsRequired') }}</span>
              </label>
              <input type="number" name="numberOfOpenPositions" id="numberOfOpenPositions" class="input input-bordered w-full" value="{{ job.numberOfOpenPositions }}" min="0" required/>
            </div>
            <!-- Closing Date -->
            <div class="form-control w-full">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.closingDateRequired') }}</span>
              </label>
              <input type="date" name="closingDate" id="closingDate" class="input input-bordered w-full" value="{{ job.closingDate.toISOString().split('T')[0] if job.closingDate else '' }}" required/>
            </div>
            <!-- Job Spec Link -->
            <div class="form-control w-full col-span-2">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.jobSpecLink') }}</span>
              </label>
              <input type="url" name="jobSpecLink" id="jobSpecLink" class="input input-bordered w-full" value="{{ job.jobSpecLink }}" placeholder="{{ t('jobRoles.editJobRoleForm.jobSpecLinkPlaceholder') }}"/>
              <div class="label">
                <span class="label-text-alt">{{ t('jobRoles.editJobRoleForm.jobSpecLinkHint') }}</span>
              </div>
            </div>
            <!-- Description -->
            <div class="form-control w-full col-span-2">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.descriptionRequired') }}</span>
              </label>
              <textarea name="description" id="description" class="textarea textarea-bordered h-24 w-full" required>{{ job.description }}</textarea>
            </div>
            <!-- Responsibilities -->
            <div class="form-control w-full col-span-2">
              <label class="label flex-col items-start">
                <span class="label-text font-medium mb-1">{{ t('jobRoles.editJobRoleForm.responsibilitiesRequired') }}</span>
              </label>
              <textarea
                name="responsibilities"
                id="responsibilities"
                class="textarea textarea-bordered h-32 w-full"
                placeholder="{{ t('jobRoles.editJobRoleForm.responsibilitiesPlaceholder') }}"
                required>
                {% if job.responsibilities %}
                  {{ job.responsibilities.join(', ') if job.responsibilities is iterable else job.responsibilities }}
                {% endif %}
              </textarea>
              <div class="label">
                <span class="label-text-alt">{{ t('jobRoles.editJobRoleForm.responsibilitiesHint') }}</span>
              </div>
            </div>
          </div>
          <!-- Form Actions -->
          <div class="flex justify-end gap-4 mt-8">
            <a href="/job-roles" class="btn btn-outline">{{ t('jobRoles.editJobRoleForm.cancel') }}</a>
            <button type="submit" class="btn btn-primary gap-2" id="saveBtn">
              <span class="loading loading-spinner loading-sm hidden" id="loadingSpinner"></span>
              <i data-lucide="check" class="w-4 h-4"></i>
              Save Changes
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Success/Error Messages -->
    {% if success %}
      <div class="alert alert-success mt-6">
        <i data-lucide="check" class="w-6 h-6"></i>
        <span>{{ success }}</span>
      </div>
    {% endif %}
    {% if error %}
      <div class="alert alert-error mt-6">
        <i data-lucide="x" class="w-6 h-6"></i>
        <span>{{ error }}</span>
      </div>
    {% endif %}
  {% endblock %}
  {% block scripts %}
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('editJobForm');
        const saveBtn = document.getElementById('saveBtn');
        const loadingSpinner = document.getElementById('loadingSpinner');
        form.addEventListener('submit', function (event) { // Show loading state
          saveBtn.disabled = true;
          loadingSpinner.classList.remove('hidden');
        });
        // Form validation
        const requiredFields = form.querySelectorAll('[required]');
        requiredFields.forEach(field => {
          field.addEventListener('invalid', function () {
            this.classList.add('input-error');
          });
          field.addEventListener('input', function () {
            if (this.validity.valid) {
              this.classList.remove('input-error');
            }
          });
        });
        // Auto-resize textareas
        const textareas = form.querySelectorAll('textarea');
        textareas.forEach(textarea => {
          textarea.addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = this.scrollHeight + 'px';
          });
        });
      });
    </script>
  {% endblock %}