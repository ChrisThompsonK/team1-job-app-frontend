{% extends "layouts/base.njk" %}
{% set currentPage = "job-roles" %}
{% block title %}
  Add New Job Role
{% endblock %}
{% block styles %}
  <link rel="stylesheet" href="/css/job-roles.css">
  {% endblock %}
  {% block body_attributes %}
    class="job-roles-page"{% endblock %}
  {% block main_attributes %}
    class="container mx-auto px-4 py-8"{% endblock %}
  {% block content %}
    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4 mb-4">
        <a href="/job-roles" class="btn btn-ghost btn-sm gap-2">
          <i data-lucide="chevron-left" class="w-4 h-4"></i>
          Back to Job Roles
        </a>
      </div>
      <h1 class="text-4xl font-bold text-base-content mb-2">Add New Job Role</h1>
      <p class="text-base-content/70">Create a new job role opportunity</p>
    </div>
    <!-- Error Alert -->
    {% if error %}
      <div class="alert alert-error mb-6">
        <i data-lucide="x-circle" class="w-6 h-6 shrink-0 stroke-current"></i>
        <span>{{ error }}</span>
      </div>
    {% endif %}
    <!-- Add Form -->
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body">
        <form id="addJobForm" method="POST" action="/job-roles/add">
          <div
            class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Job Name -->
            <div class="form-control col-span-2">
              <label class="label">
                <span class="label-text font-medium">Job Role Name *</span>
              </label>
              <input type="text" name="jobRoleName" id="jobRoleName" class="input input-bordered" value="{{ formData.jobRoleName if formData else '' }}" required/>
            </div>
            <!-- Location -->
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Location *</span>
              </label>
              <input type="text" name="location" id="location" class="input input-bordered" value="{{ formData.location if formData else '' }}" required/>
            </div>
            <!-- Capability -->
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Capability *</span>
              </label>
              <select name="capability" id="capability" class="select select-bordered" required>
                <option value="">Select Capability</option>
                {% for capability in capabilities %}
                  <option value="{{ capability.value }}" {% if formData and formData.capability == capability.value %} selected {% endif %}>{{ capability.label }}</option>
                {% endfor %}
              </select>
            </div>
            <!-- Band -->
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Band *</span>
              </label>
              <select name="band" id="band" class="select select-bordered" required>
                <option value="">Select Band</option>
                <option value="Junior" {% if formData and formData.band == "Junior" %} selected {% endif %}>Junior</option>
                <option value="Mid" {% if formData and formData.band == "Mid" %} selected {% endif %}>Mid</option>
                <option value="Senior" {% if formData and formData.band == "Senior" %} selected {% endif %}>Senior</option>
                <option value="Principal" {% if formData and formData.band == "Principal" %} selected {% endif %}>Principal</option>
              </select>
            </div>
            <!-- Status -->
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Status *</span>
              </label>
              <select name="status" id="status" class="select select-bordered" required>
                <option value="">Select Status</option>
                <option value="open" {% if formData and formData.status == "Open" %} selected {% endif %}>Open</option>
                <option value="closed" {% if formData and formData.status == "Closed" %} selected {% endif %}>Closed</option>
              </select>
            </div>
            <!-- Number of Positions -->
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Number of Positions *</span>
              </label>
              <input type="number" name="numberOfOpenPositions" id="numberOfOpenPositions" class="input input-bordered" value="{{ formData.numberOfOpenPositions if formData else '1' }}" min="0" required/>
            </div>
            <!-- Closing Date -->
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Closing Date *</span>
              </label>
              <input type="date" name="closingDate" id="closingDate" class="input input-bordered" value="{{ formData.closingDate if formData else '' }}" required/>
            </div>
            <!-- Job Spec Link -->
            <div class="form-control col-span-2">
              <label class="label">
                <span class="label-text font-medium">Job Specification Link</span>
              </label>
              <input type="url" name="jobSpecLink" id="jobSpecLink" class="input input-bordered" value="{{ formData.jobSpecLink if formData else '' }}" placeholder="https://company.com/careers/job-spec (optional)"/>
              <div class="label">
                <span class="label-text-alt">Optional - Link to detailed job specification</span>
              </div>
            </div>
            <!-- Description -->
            <div class="form-control col-span-2">
              <label class="label">
                <span class="label-text font-medium">Description *</span>
              </label>
              <textarea name="description" id="description" class="textarea textarea-bordered h-24" required>{{ formData.description if formData else '' }}</textarea>
            </div>
            <!-- Responsibilities -->
            <div class="form-control col-span-2">
              <label class="label">
                <span class="label-text font-medium">Responsibilities *</span>
              </label>
              <textarea
                name="responsibilities"
                id="responsibilities"
                class="textarea textarea-bordered h-32"
                placeholder="Enter responsibilities separated by commas"
                required>{{ formData.responsibilities if formData else '' }}</textarea>
              <div class="label">
                <span class="label-text-alt">Separate multiple responsibilities with commas</span>
              </div>
            </div>
          </div>
          <!-- Form Actions -->
          <div class="flex justify-end gap-4 mt-8">
            <a href="/job-roles" class="btn btn-outline">Cancel</a>
            <button type="submit" class="btn btn-primary gap-2" id="saveBtn">
              <span class="loading loading-spinner loading-sm hidden" id="loadingSpinner"></span>
              <i data-lucide="plus" class="w-4 h-4"></i>
              Create Job Role
            </button>
          </div>
        </form>
      </div>
    </div>
  {% endblock %}
  {% block scripts %}
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('addJobForm');
        const saveBtn = document.getElementById('saveBtn');
        const loadingSpinner = document.getElementById('loadingSpinner');
        form.addEventListener('submit', function (event) { // Show loading state
          saveBtn.disabled = true;
          loadingSpinner.classList.remove('hidden');
        });
        // Form validation
        const requiredFields = form.querySelectorAll('[required]');
        requiredFields.forEach(field => {
          field.addEventListener('invalid', function () {
            this.classList.add('input-error');
          });
          field.addEventListener('input', function () {
            if (this.validity.valid) {
              this.classList.remove('input-error');
            }
          });
        });
        // Auto-resize textareas
        const textareas = form.querySelectorAll('textarea');
        textareas.forEach(textarea => {
          textarea.addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = this.scrollHeight + 'px';
          });
        });
      });
    </script>
  {% endblock %}