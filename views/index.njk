{% extends "layouts/base.njk" %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content %}
    <!-- Hero Section -->
    <div class="hero min-h-screen bg-gradient-to-br from-secondary to-primary">
        <div class="hero-overlay bg-opacity-20"></div>
        <div class="hero-content text-center text-neutral-content">
            <div class="max-w-lg">
                <div class="mb-8">
                    <div class="inline-flex items-center justify-center w-20 h-20 bg-white bg-opacity-20 rounded-full mb-6">
                        <i data-lucide="briefcase" class="h-10 w-10"></i>
                    </div>
                    <h1 class="text-6xl font-bold mb-4">{{ t('home.title') }}</h1>
                    <p class="text-xl leading-relaxed opacity-90">{{ t('home.welcome') }}</p>
                </div>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
                    <a href="/job-roles" class="btn btn-accent btn-lg gap-2">
                        <i data-lucide="search" class="h-5 w-5"></i>
                        {{ t('home.exploreJobs') }}
                    </a>
                    <div class="divider divider-horizontal hidden sm:flex">{{ t('common.or') }}</div>
                    <button class="btn btn-outline btn-lg">
                        {{ t('home.learnMore') }}
                    </button>
                </div>
                <div class="text-sm opacity-70 bg-white bg-opacity-10 rounded-lg p-3 inline-block">
                    <span class="font-medium">{{ t('home.lastUpdated') }}:</span>
                    {{ timestamp }}
                </div>
            </div>
        </div>
    </div>
    <!-- Features Section -->
    <div class="py-20 bg-base-100">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold mb-4">{{ t('home.featuresTitle') }}</h2>
                <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
                    {{ t('home.featuresSubtitle') }}
                </p>
            </div>
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Nunjucks Card -->
                <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300
                        hover:-translate-y-2">
                    <div class="card-body">
                        <div class="flex items-center justify-center w-12 h-12 bg-primary/10 rounded-lg mb-4">
                            <i data-lucide="file-text" class="h-6 w-6 text-primary"></i>
                        </div>
                        <h3 class="card-title text-lg">{{ t('home.features.nunjucks.title') }}</h3>
                        <p class="text-base-content/70">{{ t('home.features.nunjucks.description') }}</p>
                        <div class="badge badge-primary badge-outline mt-2">{{ t('home.features.nunjucks.badge') }}</div>
                    </div>
                </div>
                <!-- Express Card -->
                <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300
                        hover:-translate-y-2">
                    <div class="card-body">
                        <div class="flex items-center justify-center w-12 h-12 bg-secondary/10 rounded-lg mb-4">
                            <i data-lucide="server" class="h-6 w-6 text-secondary"></i>
                        </div>
                        <h3 class="card-title text-lg">{{ t('home.features.express.title') }}</h3>
                        <p class="text-base-content/70">{{ t('home.features.express.description') }}</p>
                        <div class="badge badge-secondary badge-outline mt-2">{{ t('home.features.express.badge') }}</div>
                    </div>
                </div>
                <!-- TypeScript Card -->
                <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300
                        hover:-translate-y-2">
                    <div class="card-body">
                        <div class="flex items-center justify-center w-12 h-12 bg-accent/10 rounded-lg mb-4">
                            <i data-lucide="code" class="h-6 w-6 text-accent"></i>
                        </div>
                        <h3 class="card-title text-lg">{{ t('home.features.typescript.title') }}</h3>
                        <p class="text-base-content/70">{{ t('home.features.typescript.description') }}</p>
                        <div class="badge badge-accent badge-outline mt-2">{{ t('home.features.typescript.badge') }}</div>
                    </div>
                </div>
                <!-- Static Files Card -->
                <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300
                        hover:-translate-y-2">
                    <div class="card-body">
                        <div class="flex items-center justify-center w-12 h-12 bg-info/10 rounded-lg mb-4">
                            <i data-lucide="folder" class="h-6 w-6 text-info"></i>
                        </div>
                        <h3 class="card-title text-lg">{{ t('home.features.assets.title') }}</h3>
                        <p class="text-base-content/70">{{ t('home.features.assets.description') }}</p>
                        <div class="badge badge-info badge-outline mt-2">{{ t('home.features.assets.badge') }}</div>
                    </div>
                </div>
                <!-- Job Roles Card - Featured -->
                <div class="card bg-gradient-to-br from-secondary to-primary text-primary-content shadow-xl hover:shadow-2xl transition-all
                        duration-300 hover:-translate-y-2 md:col-span-2 lg:col-span-1">
                    <div class="card-body">
                        <div class="flex items-center justify-center w-12 h-12 bg-white/20 rounded-lg mb-4">
                            <i data-lucide="briefcase" class="h-6 w-6"></i>
                        </div>
                        <h3 class="card-title text-lg text-white">{{ t('home.features.jobs.title') }}</h3>
                        <p class="text-white/90">{{ t('home.features.jobs.description') }}</p>
                        <div class="card-actions justify-between items-center mt-4">
                            <div class="badge badge-accent">{{ t('home.featured') }}</div>
                            <a href="/job-roles" class="btn btn-accent btn-sm gap-2">
                                <i data-lucide="arrow-right" class="h-4 w-4"></i>
                                {{ t('home.browseJobs') }}
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Daisy UI Card -->
                <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300
                        hover:-translate-y-2">
                    <div class="card-body">
                        <div class="flex items-center justify-center w-12 h-12 bg-success/10 rounded-lg mb-4">
                            <i data-lucide="palette" class="h-6 w-6 text-success"></i>
                        </div>
                        <h3 class="card-title text-lg">{{ t('home.features.daisyui.title') }}</h3>
                        <p class="text-base-content/70">{{ t('home.features.daisyui.description') }}</p>
                        <div class="badge badge-success badge-outline mt-2">{{ t('home.features.daisyui.badge') }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Call to Action Section -->
    <div class="py-16 bg-gradient-to-r from-secondary to-primary">
        <div class="container mx-auto px-4 text-center">
            <div class="max-w-3xl mx-auto text-primary-content">
                <h2 class="text-4xl font-bold mb-6">{{ t('home.ctaTitle') }}</h2>
                <p class="text-xl mb-8 opacity-90">
                    {{ t('home.ctaSubtitle') }}
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/job-roles" class="btn btn-accent btn-lg gap-2">
                        <i data-lucide="search" class="h-5 w-5"></i>
                        {{ t('home.findJob') }}
                    </a>
                    <button class="btn btn-outline btn-lg text-white border-white hover:bg-white hover:text-primary">
                        {{ t('home.contactSupport') }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}