{% extends "layouts/base.njk" %}
{% block title %}
    {{ title }}
{% endblock %}
{% block styles %}
    <link rel="stylesheet" href="/css/home.css">
    {% endblock %}
    {% block content %}
        <div class="container">
            <div class="home-container">
                <h1 class="home-title">{{ title }}</h1>
                <div class="home-message">{{ message }}</div>
                <div class="home-timestamp">Generated at: {{ timestamp }}</div>
                <div class="feature-list">
                    <h2>Available Features:</h2>
                    <ul>
                        <li>
                            <strong>Nunjucks Templating:</strong>
                            Dynamic HTML generation with template inheritance</li>
                        <li>
                            <strong>Express Server:</strong>
                            Fast and lightweight web framework</li>
                        <li>
                            <strong>TypeScript:</strong>
                            Type-safe development environment</li>
                        <li>
                            <strong>Static File Serving:</strong>
                            CSS, JS, and asset management</li>
                        <li>
                            <strong>
                                <a href="/job-roles" class="feature-link">Job Roles:</a>
                            </strong>
                            Browse available job opportunities</li>
                    </ul>
                </div>
            </div>
        </div>
    {% endblock %}