{
  "name": "team1-job-app-frontend",
  "version": "1.0.0",
  "description": "Modern Node.js TypeScript project with ES modules",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run build:css\" \"tsx watch src/index.ts\"",
    "build": "npm run build:css:prod && tsc",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./public/css/style.css --watch",
    "build:css:prod": "tailwindcss -i ./src/styles/main.css -o ./public/css/style.css --minify",
    "start": "node dist/index.js",
    "clean": "rm -rf dist && rm -f public/css/style.css",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "keywords": [
    "typescript",
    "nodejs",
    "es-modules"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.8.0",
    "@types/nunjucks": "^3.2.6",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "daisyui": "^5.1.26",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "^5.2.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/axios": "^0.9.36",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "nunjucks": "^3.2.4"
  }
}
